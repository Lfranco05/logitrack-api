<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="LogiTrackPU" transaction-type="RESOURCE_LOCAL">

        <class>com.lfranco.logitrackapi.entity.Product</class>
        <class>com.lfranco.logitrackapi.entity.Customer</class>
        <class>com.lfranco.logitrackapi.entity.Order</class>
        <class>com.lfranco.logitrackapi.entity.OrderItem</class>
        <class>com.lfranco.logitrackapi.entity.Payment</class>

        <properties>

            <!-- ConexiÃ³n sin datasource -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:8080/logitrackdb"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>

            <!-- Hibernate ORM 6 (compatibles con Jakarta EE 10) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Desactiva JTA completamente -->
            <property name="hibernate.transaction.jta.platform" value=""/>
        </properties>
    </persistence-unit>
</persistence>